# Index
color normal        default     default
color error         red         default
color tilde         brightwhite default
color message       cyan        default
color prompt        cyan        default
color markers       cyan        default
color status        default     default
color indicator     yellow      default
color tree          blue        default

# Messages
# Bold white for message author
color index_author  brightwhite default "!(~D | ~N) ~A"
# Green for new messages
color index         green       default ~N
# Red for deleted messages
color index         red         default ~D
# Red for attachment text
color attachment    red         default

# Message headers
color header        brightwhite default "^"

# Message body
color quoted        magenta     default
# URLs
color body          cyan        default "(http|https|ftp|news|telnet|finger)://[^ \">\t\r\n]*"
# Emails
color body          cyan        default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# Sidebar
color sidebar_divider   default default
color sidebar_indicator yellow  default
color sidebar_highlight cyan    default
color sidebar_new       green   default

# vi:syntax=muttrc
