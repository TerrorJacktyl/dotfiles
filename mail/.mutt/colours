# Index
color normal        black       brightwhite
color error         red         brightwhite
color tilde         brightblack brightwhite
color message       cyan        brightwhite
color markers       cyan        brightwhite
color status        black       brightwhite
color indicator     blue        brightwhite
color tree          yellow      brightwhite

# Messages
# Green for new messages
color index         green       brightwhite ~N
# Red for deleted messages
color index         red         brightwhite ~D
color attachment    red         brightwhite

# Message headers
color header        white       brightwhite "^"

# Message body
color quoted        magenta     brightwhite
# URLs
color body          cyan        brightwhite "(http|https|ftp|news|telnet|finger)://[^ \">\t\r\n]*"
# Emails
color body          cyan        brightwhite "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# Sidebar
color sidebar_divider   black   brightwhite
color sidebar_indicator blue    brightwhite
color sidebar_highlight cyan    brightwhite
color sidebar_new       green   brightwhite

# vi:syntax=muttrc
