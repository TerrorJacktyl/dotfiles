# CERN stuff
alias kerberos="kinit apearce@CERN.CH && aklog"
alias ktmux="pagsh.krb -c 'kinit && tmux'"
alias cern="ssh lxplus.cern.ch"
alias cern5="ssh lxplus5.cern.ch"
alias apvm="cern -t \"ssh apvm.cern.ch\""
alias apvelo="cern -t \"ssh apvelotest.cern.ch\""
alias charmcpv="cd ~/Documents/LHCb/Presentations/CharmCPV"

# Executable shortcuts
alias root="root -l"
alias tb="tbrowser"
alias r="ruby"
alias irb="pry"
alias be="bundle exec"
alias p="python"
alias ip="ipython --no-banner"

# Git
if [[ "`uname`" == "Darwin" ]]; then
  alias git="hub"
fi
alias g="git"
alias commit="git commit -m"
alias ga="git add"
alias gp="git push"
alias gd="git diff"
alias st="git status -sb"
alias gitolite="cd $HOME/Sites/mu/gitolite-admin"
# SVN *shudder*
alias sst="svn status"
alias sdiff="svn diff | less"

# Shell utilities
alias q="exit"
alias k="clear"
alias cdk="cd && clear"
alias todo="ag TODO"
# I do this all the time
alias :q="exit"

# Handy snippets
# image dimensions
alias image-d="sips -g pixelWidth -g pixelHeight"
# http://xkcd.com/1168/
alias tarup="tar czvf"

# Open vim, one tab per file
alias v="vim -p"

# VPS
alias mu="ssh mu"

# Use like bundle exec
alias npm-exec="PATH=$(npm bin):$PATH"

# Use to quick pipe to pager, e.g. `svn diff L`
alias -g L="| less"
