# CERN stuff
alias kerberos="kinit apearce@CERN.CH && aklog"
alias kscreen="pagsh.krb -c 'kinit && screen'"
alias cern="ssh lxplus.cern.ch"
alias cern5="ssh lxplus5.cern.ch"
alias apvm="cern -t \"ssh apvm.cern.ch\""

# Executable shortcuts
alias root="root -l"
alias tb="tbrowser"
alias o="open"
alias r="ruby"
alias irb="pry"
alias be="bundle exec"
alias p="python"
alias ip="ipython --no-banner"

# tmux
# Enable 256 colours https://stackoverflow.com/questions/10158508
export TERM="xterm-256color"
alias t="tmux -2"
alias tn="tmux new -s"
alias ta="tmux attach -t"
alias td="tmux detach"
alias ts="tmux switch -t"

# Git
alias git="hub"
alias g="git"
alias commit="git commit -m"
alias ga="git add"
alias gp="git push"
alias gd="git diff"
alias st="git status -sb"
alias gitolite="cd $HOME/Sites/mu/gitolite-admin"
# SVN *shudder*
alias sst="svn status"
alias sdiff="svn diff | less"

# Shell utilities
alias q="exit"
alias k="clear"
alias cdk="cd && clear"
alias todo="ack TODO"

# Handy snippets
# image dimensions
alias image-d="sips -g pixelWidth -g pixelHeight"
# Quick directory server
alias webshare='python -c "import SimpleHTTPServer;SimpleHTTPServer.test()"'
# http://xkcd.com/1168/
alias tarup="tar czvf"
# Open in TeXShop
alias texshop="open -a TeXShop"
alias txs="texshop"

# Easy directory access
alias afs="cd $AFS"

# Open vim, one tab per file
alias v="vim -p"
alias gv="gvim -p"

# VPS
alias mu="ssh mu"
